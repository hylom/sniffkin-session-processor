{
  "compilerOptions": {
    "target": "es2016",
    "module": "es2020",
    "rootDir": "./src",
    "outDir": "./dist",
    "strict": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "declaration": true
  },
  "include": [ "src/**/*" ],
  "exclude": [ "dist", "node_modules" ],
  "compileOnSave": false
}
